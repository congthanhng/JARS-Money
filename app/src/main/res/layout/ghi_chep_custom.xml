<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgHinhghichep"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/money_icon"/>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/txtVMucChi"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Gửi xe"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/txtVDienGiai"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Diễn giải"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textViewNgayChi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="12/12/2018"
        android:layout_gravity="center"
        android:gravity="center"/>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">
        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/txtVSoTien"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="500.000 đ"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/txtVJars"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="NEC"/>
    </LinearLayout>

</LinearLayout>