<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GhiChepFragment"
    android:orientation="vertical"
    android:padding="10dp">
    <Button
        android:textColor="#ffffff"
        android:id="@+id/buttonThemGhiChep"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Ghi Chép"
        android:background="@drawable/custom_button_them"/>

    <ListView
        android:id="@android:id/list"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/textViewTongtiendachi"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#700b0b"
        android:textSize="17sp"
        android:text="Tổng tiền đã chi: 0 VNĐ"/>
    <TextView
        android:id="@+id/textViewHienCo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0d6b33"
        android:textSize="17sp"
        android:text="Hiện có: 0 VNĐ"/>

</LinearLayout>