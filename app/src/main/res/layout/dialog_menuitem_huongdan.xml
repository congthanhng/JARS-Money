<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Hướng dẫn sử dụng"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Đọc thật kĩ trước khi sử dụng. Những điều sau đây sẽ giúp thay đổi tư duy tiền bạc của bạn mãi mãi"
        android:textColor="#af0202"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phương pháp quản lý tiền bạc cá nhân JARS, được sáng tạo bởi T.Harv Eker – bậc thầy trong các buổi diễn thuyết lĩnh vực tài chính, kinh tế và con người."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số tiền của bạn từ bất kì nguồn thu nhập nào sẽ được chia đều thành 6 hũ như sau:"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="  - NEC (Neccessities)- Tài khoản chi tiêu cần thiết"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="  - LTSS (Long Term saving for spending)- Tài khoản tiết kiệm tiêu dùng cho tương lai"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="  - EDU (Education)- Tài khoản giáo dục, phát triển bản thân"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="  - FFA (Financial Freedom Account) - Tài khoản tự do tài chính, đầu tư sinh lời"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="  - PLAY - Tài khoản hưởng thụ"/>
    <TextView
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  - GIVE - Tài khoản cho đi"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hãy chọn hũ bên dưới để tìm hiểu thêm:"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/huongdanNEC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="NEC"/>
        <Button
            android:id="@+id/huongdanLTSS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="LTSS"/>
        <Button
            android:id="@+id/huongdanEDU"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="EDU"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/huongdanFFA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="FFA"/>
        <Button
            android:id="@+id/huongdanPLAY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="PLAY"/>
        <Button
            android:id="@+id/huongdanGIVE"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="GIVE"/>
    </LinearLayout>
</LinearLayout>